{
  "include": ["src/**/*", "types/*"],
  "exclude": ["src/**/*.stories.tsx"],
  "compilerOptions": {
    "target": "es2021",
    "strict": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  }
}
